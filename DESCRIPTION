Package: rbcc
Type: Package
Title: Risk-Based Control Charts
Version: 0.1.0
Authors@R: c(
    person(given="Aamir",family= "Saghir", role = "aut"),
    person(given=c("Attila","Imre"),family="Katona", role = "aut"),
